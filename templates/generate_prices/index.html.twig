{% extends 'admin/base.html.twig' %}

{% block title %}Price Generation{% endblock %}

{% block body %}
        <div class="container-fluid">

          <!-- Page Heading -->
         <a class="btn btn-primary" href="{{ path('app_generateprices_new') }}"><i class="fas fa-plus"></i> Create new</a>
          <br>
          <br>
          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Generation Price</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
            <tr>
                <th>Generation</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for PriceGn in pricegn %}
            <tr>
                <td>{{ PriceGn.generation }}</td>
                <td>{{ PriceGn.price }}DT</td>
                <td>
                   
                    <a class="btn btn-success" href="{{ path('app_generateprices_edit', {'id': PriceGn.id}) }}"><i class="fas fa-edit"></i> Edit</a>

                            <form method="post" action="{{ path('app_generateprices_delete', {'id': PriceGn.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ PriceGn.id) }}">
                                <button class="btn btn-google btn-user">
                                    <i class="fas fa-trash-alt"></i>
                                    Delete</button>
                            </form>



                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                </div>
            </div>
          </div>
        </div>

    
{% endblock %}

