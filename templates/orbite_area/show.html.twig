        </div>
      </div>
        <div class="btnorbit">
        {% if is_granted('ROLE_ADMIN') %}
          <a class="btn btn-info" href="{{ path('performance_show', {'id': orbitt.0.performance.id}) }}"><i class="far fa-eye"></i> My performance</a>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
          <a class="btn btn-info" href="{{ path('disciples', {'id': orbitt.0.id}) }}"> <i class="far fa-eye"></i> My Disciples</a>
        {% endif %}
        </div>
      </div> #}

    </div>
