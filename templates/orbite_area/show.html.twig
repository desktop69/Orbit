{% extends 'base.html.twig' %}



{% block title %}Orbite{% endblock %}

{% block body %}
        <div class="container-fluid">
<div class="ht__bradcaump__area bg-image--6">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title">ORBIT AREA</h2>
                </div>
            </div>
        </div>
    </div>
</div>
{% for parents in orbitt.0.parent %}

<a class="btn btn-primary" href="{{ path('orbit_show', {'id': parents.parent.id}) }}"><i class="fas fa-arrow-left"></i> Back </a>

{% endfor %}
<div class="card shadow mb-4">

      <div class="background"></div>
        

        <div class="main_rayon"></div>
         {% set nbr = 0 %}
        {% if orbitt.0.profile  %}
                
            <img src="{{ vich_uploader_asset(orbitt.0.profile.image,'imageFile') }}" alt="" class="main_user rounded-pere rounded-circle" style="">

        {% else %}
        
        <img src="{{asset('uploads/not.png')}}" alt="" class="main_user rounded-pere rounded-circle" style="">
        
        {%endif%}

                      {% for orbit in orbits %}
                          {% set nbr = nbr+1 %}
                          
                          <div class="rayon_1{{nbr}}"></div>
                            <div class="gen_{{nbr}}">
                                    
                                        {% if orbit.fils.profile  %}
                                       <a href="{{ path('orbit_show', {'id': orbit.fils.id}) }}" >
                                        <img src="{{ vich_uploader_asset(orbit.fils.profile.image,'imageFile') }}" alt="" class="rounded-fils rounded-circle" style="">
                                        <div class="team-window">
                                            <div class="center-team-window">
                                            <img src="{{ vich_uploader_asset(orbit.fils.profile.image,'imageFile') }}" alt="" class="rounded-fils rounded-circle" style="width: 100px; height: 100px;">
                                            <p><h6>{{ orbit.fils.fname }} {{ orbit.fils.lname }}</h6></p>
                                            </div>
                                        </div>
                                        </a>
                                        {% else %}
                                        <a href="{{ path('orbit_show', {'id': orbit.fils.id}) }}" >
                                        <img src="{{asset('uploads/not.png')}}" alt="" class="rounded-fils rounded-circle" style="">
                                        <div class="team-window">
                                            <div class="center-team-window">
                                            <img src="{{asset('uploads/not.png')}}" alt="{{ orbit.fils.fname }}" class="rounded-fils rounded-circle" style="width: 100px; height: 100px;" >
                                            <p><h6>{{ orbit.fils.fname }} {{ orbit.fils.lname }}</h6></p>
                                            </div>         
                                        </div>
                                        </a>
                                        {%endif%}

                            </div>
                          {% for i in 1..7 %}
                                <span class="btn btn-circle btn-sm CIRCLE_GEN_1{{nbr}}{{i}}"><i class="fas fa-user-plus"></i></span>
                          {%endfor%}
                        
                      {% endfor %}

                      {% if nbr != 7  %}
                      {% for nbr in nbr+1..7 %}
                          <div class="rayon_1{{nbr}}"></div>
                            <div class="addgen_{{nbr}}">
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('orbit_new', {'id': orbitt.0.id})}}" class="btn btn-warning btn-circle btn-sm "><i class="fas fa-user-plus"></i></a>
                            {% else %}
                            <a href="" class="btn btn-warning btn-circle btn-sm "><i class="fas fa-user-plus"></i></a>
                            {% endif %}
                          </div>
                      {%endfor%}
                      {%endif%}


        {# <div class="badge tablorbit">
        <div class="table-responsive">
                <table class="table table-sm">
                            <tr class="table-info">
                        <td >
                        {% if orbitt.0.profile  %}
                            <img src="{{ vich_uploader_asset(orbitt.0.profile.image,'imageFile') }}" alt="" class="img-circle" style="width: 70px;">
                        {% else %}
                            <img src="{{asset('uploads/not.png')}}" alt=""  style="width: 70px;" >
                        {% endif%}
                        </td>
                        <td ><br><h5>{{ orbitt.0.lname }}<br>{{ orbitt.0.fname }}</h5> </td>
                    </tr>
